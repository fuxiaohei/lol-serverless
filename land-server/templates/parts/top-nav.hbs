<div id="top-nav" class="border-bottom d-flex justify-content-between align-items-center p-3">
    <ol class="breadcrumb m-0 p-0 border-0 shadow-none d-flex align-items-center">
        {{#each page.breadcrumb}}
        {{#if link}}
        <li class="breadcrumb-item"><a class="text-reset" href="{{link}}">{{title}}</a></li>
        {{else}}
        <li class="breadcrumb-item active">{{title}}</li>
        {{/if}}
        {{/each}}
        {{#if project_name}}
        <li class="breadcrumb-item active">{{project_name}}</li>
        {{/if}}
    </ol>
    <div class="d-flex align-items-center justify-content-between">
        <div id="user-dropdown" class="dropdown mx-3">
            <button class="btn btn-reset dropdown-toggle vertical-center text-body-secondary px-0"
                data-bs-toggle="dropdown">
                <i class='bx bxs-user-circle me-2'></i>{{page.user.name}}
            </button>
            <ul class="dropdown-menu">
                <div class="text-center my-2">
                    <img src="{{page.user.avatar_url}}" alt="user-avatar" width="96" height="96" class="rounded">
                    <h6 class="my-3">{{page.user.name}}</h6>
                    {{#if page.user.social_name}}
                    <p class="mb-3 small">
                        <a href="{{page.user.social_link}}" class="link-reset justify-content-center y-center"
                            target="_blank">
                            <i class='bx bxl-{{page.user.social_provider}} me-1'></i>{{page.user.social_name}}
                        </a>
                    </p>
                    {{/if}}
                </div>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item vertical-center" href="/settings"><i
                            class='bx bxs-cog me-2'></i>Settings</a></li>
                {{#if page.user.is_admin}}
                <li>
                    <a class="dropdown-item vertical-center admin text-danger" href="/admin"><i
                            class='bx bx-shield-quarter me-2'></i>Admin</a>
                </li>
                {{/if}}
                <li><a class="dropdown-item vertical-center" href="/sign-out"><i
                            class='bx bx-log-out-circle me-2'></i>Sign Out</a></li>
            </ul>
        </div>
        <div id="theme-switcher-div" class="border-start">
            <button id="theme-switcher" class="text-body-secondary border-0 bg-transparent mx-3 p-0">
                <i id="theme-switcher-icon" class='bx bxs-moon fs-6'></i>
            </button>
        </div>
    </div>
</div>